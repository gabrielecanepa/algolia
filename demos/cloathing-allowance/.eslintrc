{
  "root": true,
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["eslint:recommended"],
  "rules": {
    "array-bracket-spacing": [2, "never"],
    "arrow-parens": [2, "as-needed"],
    "comma-dangle": [2, "always-multiline"],
    "max-len": [2, 140],
    "semi": [2, "never"],
    "space-in-parens": [2, "never"],
    "quotes": [2, "single", { "avoidEscape": true }]
  }
}
